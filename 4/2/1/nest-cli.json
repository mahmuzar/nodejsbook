{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "infrastructure/config/*.env",
        "outDir": "dist/infrastructure/config"
      }
    ]
  },
  "test": {
    "coverage": true,
    "coverageReporters": ["text-summary", "lcov"]
  }
}